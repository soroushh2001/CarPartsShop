@model int
<div class="col-lg-4">

	<!-- Order summary START -->
	<div class="card bg-light border border-secondary border-opacity-25 rounded-2 p-4">
		<!-- card header -->
		<div class="card-header bg-light p-0 pb-3">
			<h5 class="card-title mb-0">جزئیات پرداخت</h5>
		</div>

		<!-- Card body -->
		<div class="card-body p-0 pb-3">
			<ul class="list-group list-group-borderless">
				<li class="list-group-item d-flex justify-content-between align-items-center">
					<span>قیمت کالاها</span>
					<span class="h6 mb-0">@Model.ToString("#,0") تومان</span>
				</li>

			</ul>
		</div>

		<!-- Card footer -->
		<div class="card-footer bg-light border-top p-0 pt-3">
			<div class="d-flex justify-content-between align-items-center mb-3">
				<span>پرداخت</span>
			</div>

			<!-- Button -->
			<div class="d-grid"><button type="submit" class="btn btn-primary mb-0">پرداخت</button></div>
		</div>
	</div>
	<!-- Order summary END -->
</div>