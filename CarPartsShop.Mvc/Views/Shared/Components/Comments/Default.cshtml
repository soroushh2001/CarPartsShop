@using CarPartsShop.Application.Extensions
@using CarPartsShop.Application.ViewModels.Comments
@model List<CommentViewModel>
<section class="pt-0">
	<div class="container">
		<!-- Title -->
		<div class="mb-2">
			<h2 class="mb-0">دیدگاه ها</h2>
		</div>

		<div class="row g-4 justify-content-between">
			<!-- Rating START -->
			<div class="col-md-4">
				<div class="bg-primary p-4 rounded-2 mb-4">
					<div class="text-center text-white">
						<!-- Info -->
						<p class="mb-2">@Model.Count دیدگاه</p>

					</div>
				</div>

			</div>
			<!-- Rating END -->
			<!-- Review START -->
			<div class="col-md-7">

				@if(Model.Any() && Model!= null)
				{
					foreach(var item in Model)
					{
										<hr class="my-4"> <!-- Divider -->
				<!-- Review item -->
				<div class="d-flex">
					<div>
						<div class="d-flex justify-content-between mb-2">
							<div>
								<h5 class="m-0">@item.UserEmail</h5>
								<span class="me-3 small">@item.CreatedDate.ToShamsiDate()</span>
							</div>
							<!-- Rating Star -->
							
						</div>
@Html.Raw(item.Message)
						
					</div>
						</div>
					}
				}

				else
				{
					<p class="text-info">دیدگاهی جهت نمایش وجود ندارد</p>
				}
				@if (User.Identity.IsAuthenticated)
				{
									<!-- button -->
				<div class="mt-4 text-end">
					<a class="btn btn-primary-soft mb-0 collapsed" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
						ثبت دیدگاه
					</a>
					</div>

				}
				else
				{
					<div class="mt-4 text-end">
					<a class="btn btn-primary-soft mb-0" href="/login">
						برای ثبت دیدگاه وارد شوید
					</a>
					</div>
				}


			</div>
			<!-- Review END -->
		</div>
	</div>
				
</section>

	